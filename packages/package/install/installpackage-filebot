#!/bin/bash
#
# [Quick Box :: Install FileBot package]
#
# GITHUB REPOS
# GitHub _ packages  :   https://github.com/QuickBox/quickbox_packages
# LOCAL REPOS
# Local _ packages   :   /etc/QuickBox/packages
# Author             :   QuickBox.IO | JMSolo
# URL                :   https://quickbox.io
#
# QuickBox Copyright (C) 2017 QuickBox.io
# Licensed under GNU General Public License v3.0 GPL-3 (in short)
#
#   You may copy, distribute and modify the software as long as you track
#   changes/dates in source files. Any modifications to our software
#   including (via compiler) GPL-licensed code must also be made available
#   under the GPL along with build & install instructions.

DISTRO=$(lsb_release -is)
CODENAME=$(lsb_release -cs)
OUTTO=/srv/rutorrent/home/db/output.log
username=$(cat /srv/rutorrent/home/db/master.txt)
local_setup=/etc/QuickBox/setup/

echo "Installing filebot keys and sources ... " >>"${OUTTO}" 2>&1;
  if [[ $DISTRO == ubuntu ]] || [[ $DISTRO == debian ]]; then
    echo 'deb [arch=amd64] https://get.filebot.net/deb/ stable main' > /etc/apt/sources.list.d/filebot.list
    wget --quiet https://raw.githubusercontent.com/filebot/plugins/master/gpg/maintainer.pub -O - | apt-key add - > /dev/null 2>&1
  fi

echo "Updating system & installing filebot ... " >>"${OUTTO}" 2>&1;
    apt-get -y update >/dev/null 2>&1
    apt-get install -y --allow-unauthenticated -f filebot >/dev/null 2>&1
    echo
    sleep 5

echo "FileBot Install Complete!" >>"${OUTTO}" 2>&1;
    sleep 5
    echo >>"${OUTTO}" 2>&1;
    echo >>"${OUTTO}" 2>&1;
    echo "Close this dialog box to refresh your browser" >>"${OUTTO}" 2>&1;
    service apache2 reload > /dev/null 2>&1

    exit